{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop":true,
    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "strict": false,
    "noEmit": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }

    /* Linting */
  },

  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
